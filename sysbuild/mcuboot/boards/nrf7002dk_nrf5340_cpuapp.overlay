/ {
	/* Configure the partition manager to use the mx25r64 external flash memory */
	chosen {
		zephyr,code-partition = &boot_partition;
		nordic,pm-ext-flash = &mx25r64;
	};
};

&mx25r64 {
	status = "okay";
};